<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.autobots.queuer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:name="QueuerApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_autobots"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.autobots.queuer.activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER"
                    />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AccountActivity"
            android:label="@string/acct_title"
            />
        <activity android:name=".activities.FeedActivity"
            android:label="Task Manager"
            />
        <activity android:name=".activities.ProjectActivity"

            />
    </application>

</manifest>
